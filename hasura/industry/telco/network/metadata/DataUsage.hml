---
kind: TypePermissions
version: v1
definition:
  typeName: DataUsage
  permissions:
    - role: admin
      output:
        allowedFields:
          - dataUsage
          - guid
          - timestamp
          - cuid
    - role: customer
      output:
        allowedFields:
          - dataUsage
          - guid
          - timestamp
          - cuid

---
kind: Model
version: v2
definition:
  name: DataUsage
  objectType: DataUsage
  source:
    dataConnectorName: clickhouse
    collection: data_usage
  filterExpressionType: DataUsageBoolExp
  graphql:
    selectMany:
      queryRootField: dataUsage
    selectUniques:
      - queryRootField: dataUsageByTimestampGuid
        uniqueIdentifier:
          - guid
          - timestamp
    filterInputTypeName: DataUsageFilterInput
    aggregate:
      queryRootField: dataUsageAggregate
