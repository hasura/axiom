  orderByExpression: DataUsageOrderByExp

---
kind: ModelPermissions
version: v1
definition:
  modelName: DataUsage
  permissions:
    - role: admin
      select:
        filter: null
    - role: customer
      select: 
        filter: 
          fieldComparison:
            field: cuid
            operator: _eq
            value: 
              sessionVariable: x-hasura-user-id

