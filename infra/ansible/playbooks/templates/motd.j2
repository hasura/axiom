#!/bin/sh

clear

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
ITALIC='\033[3m'
BOLD='\033[1m'
NC='\033[0m'
NEON_GREEN='\033[38;5;155m'
NEON_GREEN_BRIGHT='\033[38;5;156m'
NEON_GREEN_DIM='\033[38;5;154m'

echo ""
echo ""
printf "${ITALIC}${BOLD}${NEON_GREEN_BRIGHT}"
echo "    ██████╗ ██████╗  ██████╗ ███╗   ███╗██████╗ ████████╗ ██████╗ ██╗     "
printf "${ITALIC}${BOLD}${NEON_GREEN}"
echo "    ██╔══██╗██╔══██╗██╔═══██╗████╗ ████║██╔══██╗╚══██╔══╝██╔═══██╗██║     "
printf "${ITALIC}${BOLD}${NEON_GREEN}"
echo "    ██████╔╝██████╔╝██║   ██║██╔████╔██║██████╔╝   ██║   ██║   ██║██║     "
printf "${ITALIC}${BOLD}${NEON_GREEN}"
echo "    ██╔═══╝ ██╔══██╗██║   ██║██║╚██╔╝██║██╔═══╝    ██║   ██║▄▄ ██║██║     "
printf "${ITALIC}${BOLD}${NEON_GREEN_DIM}"
echo "    ██║     ██║  ██║╚██████╔╝██║ ╚═╝ ██║██║        ██║   ╚██████╔╝███████╗"
printf "${ITALIC}${BOLD}${NEON_GREEN_DIM}"
echo "    ╚═╝     ╚═╝  ╚═╝ ╚═════╝ ╚═╝     ╚═╝╚═╝        ╚═╝    ╚══▀▀═╝ ╚══════╝"
printf "${NC}"

echo "${NEON_GREEN}System:${NC} $(hostname) @ $(hostname -I | awk '{print $1}'){% if demo_profile is defined %} | ${NEON_GREEN}Demo:${NC} ${NEON_GREEN_BRIGHT}{{ demo_profile | upper }}${NC}{% endif %}"
echo "${NEON_GREEN}Resources:${NC} Disk: $(df -h / | grep -v Filesystem | awk '{print $5 " (" $3 "/" $2 ")"}') | Mem: $(free -h | grep Mem | awk '{print $3 "/" $2}')"
echo "${NEON_GREEN}Uptime:${NC} $(uptime -p | sed 's/up //')"

if command -v docker >/dev/null 2>&1; then
    CONTAINERS=$(docker ps -q 2>/dev/null | wc -l)
    if [ "$CONTAINERS" -gt 0 ]; then
        echo ""
        echo "${NEON_GREEN}Docker:${NC} ${NEON_GREEN_BRIGHT}${CONTAINERS}${NC} containers running"
        docker ps --format "  {{ '{{.Names}}' }} ({{ '{{.Status}}' }})" 2>/dev/null
    fi
fi
echo ""
echo "${NEON_GREEN}Logged in users:${NC}"
who | awk '{print "  " $1 " from " $5}' | sort -u

echo "${NEON_GREEN}═══════════════════════════════════════════════════════${NC}"

echo ""
printf "${ITALIC}${WHITE}"
cat << "EOF"
         ╔════════════════════════════════════════════════════════╗
         ║ Deliver AI that natively signals its confidence levels ║
         ║        takes feedback and continuously improves        ║
         ╚════════════════════════════════════════════════════════╝
EOF
printf "${NC}"
echo ""